<%- include('./partials/head') %>
<%- include('./partials/header') %>

<body>

    <main>
        <section class="shopping-cart">
            <h1>Your Cart</h1>
            <div class="cart-item">
                <img src="path-to-product-thumbnail.jpg" alt="Product 1" class="cart-item-image">
                <span class="cart-item-name">Product Name 1</span>
                <span class="cart-item-price">Price $</span>
                <input type="number" value="1" class="cart-item-quantity">
                <button class="cart-item-remove" onclick="removeItem(this)">Remove</button>
            </div>
            <div class="cart-item">
                <img src="path-to-product-thumbnail.jpg" alt="Product 2" class="cart-item-image">
                <span class="cart-item-name">Product Name 2</span>
                <span class="cart-item-price">Price $</span>
                <input type="number" value="2" class="cart-item-quantity">
                <button class="cart-item-remove">Remove</button>
            </div>
            <div class="cart-summary">
                <div class="cart-subtotal">
                    <span>Subtotal:</span>
                    <span>$100.00</span>
                </div>
                <div class="cart-tax">
                    <span>Tax (6.75%):</span>
                    <span>$6.75</span>
                </div>
                <div class="cart-delivery">
                    <span>Delivery Fee:</span>
                    <span>$15.00</span>
                </div>
                <div class="cart-service">
                    <span>Service Fee:</span>
                    <span>$10.00</span>
                </div>
                <div class="cart-total">
                    <span>Total:</span>
                    <span>$131.75</span>
                </div>
            </div>
            <div class="cart-summary">
                <button class="checkout-button"><a class="checkout-button" href="/checkout">Checkout</a></button>

            </div>
        </section>
    </main>

    <%- include('./partials/footer') %>

</body>

<link rel="stylesheet" href="/styles/cart-styles.css">